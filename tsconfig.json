{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["esnext"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "outDir": "./dist/",
//    "declaration": true
  },
  "include": ["src", "package.json"],
  "exclude": []
}
